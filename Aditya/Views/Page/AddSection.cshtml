@model Aditya.Models.Page.Section

<div class="page-content">
    <div class="container">
        <div class="row">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Add Section</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.SectionContent, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextArea("SectionContent", new { @class = "ckeditor" })
                            @Html.ValidationMessageFor(model => model.SectionContent, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <input type="hidden" name="PageContentId" value="@(Request.QueryString["PageContentId"])" />

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>


            </div>
</div>
</div>